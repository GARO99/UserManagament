@model UserSearchViewModel
<form class="form-horizontal" method="post" asp-controller="Home" asp-action="Search" autocomplete="off">
    <h1 class="display-6">Filtros</h1>
    <div class="form-group row">
        <label for="inputName" class="col-sm-3 col-form-label">Nombre completo:</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" id="inputName" asp-for="FullName" placeholder="Ingresa el nombre completo" value="@Model.FullName">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputStatus" class="col-sm-3 col-form-label">Estado:</label>
        <div class="col-sm-9">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" asp-for="IsActive" id="inlineCheckbox1" checked="@Model.IsActive" >
                <label class="form-check-label" for="inlineCheckbox1">Usuarios activos</label>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-9 offset-sm-3">
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </div>
</form>
