@model UserViewModel
<form method="post" asp-controller="Home" asp-action="@ViewBag.UserFormAcction" enctype="multipart/form-data" autocomplete="off">
    <input type="hidden" class="form-control" id="userId" asp-for="UserId" value="@Model?.UserId">
    <input type="hidden" class="form-control" id="createDate" asp-for="CreateDate" value="@Model?.CreateDate.ToString("yyyy-MM-dd")">
    <input type="hidden" class="form-control" id="isActive" asp-for="IsActive" value="@Model?.IsActive">
    <input type="hidden" class="form-control" id="avatarImgCurrent" name="avatarImgCurrent" value="@Model?.AvatarImgBase64">
    <div class="mb-3">
        <label for="firstName" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="firstName" asp-for="FirstName" value="@Model?.FirstName">
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>
    <div class="mb-3">
        <label for="lastName" class="form-label">Apellido</label>
        <input type="text" class="form-control" id="lastName" asp-for="LastName" value="@Model?.LastName">
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Correo Electronico</label>
        <input type="email" class="form-control" id="email" asp-for="Email" value="@Model?.Email">
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label for="phone" class="form-label">Número de Teléfono</label>
        <input type="tel" class="form-control" id="phone" asp-for="Phone" value="@Model?.Phone">
        <span class="text-danger"  asp-validation-for="Phone"></span>
    </div>
    <div class="mb-3">
        <label for="birthdate" class="form-label">Fecha de nacimiento</label>
        <input type="date" class="form-control" id="birthdate" asp-for="Birthdate" value="@Model?.Birthdate.ToString("yyyy-MM-dd")">
        <span class="text-danger" asp-validation-for="Birthdate"></span>
    </div>
    <div class="mb-3">
        <label for="avatarImg" class="form-label">Avatar</label>
        <input type="file" class="form-control" id="avatarImg" asp-for="AvatarImg">
    </div>
    <div class="form-group row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
        <div class="col-md-6">
            <a asp-controller="Home" asp-action="" class="btn btn-primary offset-10">Volver</a>
        </div>
    </div>
</form>
@section Scripts
{
    <script>
        $(function () {
            $(".datepicker").datepicker({
                dateFormat: "yy-mm-dd"
            });
        });
    </script>
}
